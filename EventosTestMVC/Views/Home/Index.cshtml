@model EventosTestMVC.Models.ViewModel.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<link rel="stylesheet" type="text/css" href="~/css/site.css">
<div class="body-landing">
    <div class="container" style="margin-top: 100px;">
        <div class="row">
            <!-- Right Section (formerly left) -->
            <div class="col-md-6">
                <div class="text-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" class="w-50 p-3" alt="..." style=" text-decoration-line: none;">

                    </a>
                </div>


                <form asp-action="DetalleEvento" asp-controller="Evento" method="post">
                        <div class="col-10 mx-auto d-md-block text-center">
                            <h6 style="margin-bottom: 20px; margin-top: 20px;">Si estás invitado a una reunión</h6>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for="GuidDeEvento">
                            </div>
                            <div class="d-grid gap-2 d-md-flex justify-content-lg-center " style="margin-top: 30px;">
                                <button type="submit" class="btn btn-primary">Ir al evento</button>

                            </div>
                            <div class="text-center">
                                <small style="margin-right: 8px;">Si ya estás registrado</small>
                                <a asp-action="LogIn" asp-controller="Usuario" class="text-white">LogIn</a>
                            </div>
                        </div>

                </form>
            </div>

            <section class="col-md-6 top-0 bottom-0 end-0" id="landing">

                <a asp-area="" asp-controller="Evento" asp-action="CrearNuevoEvento">
                    <div class="text-center w-100">
                        <img src="~/img/mas.png" class="w-50 p-3" alt="..." style=" margin-top: 40px;">
                        <h1 style="color: #FFE0E6;text-decoration-line: none; text-decoration: none;">Crear nuevo evento</h1>
                    </div>
                </a>
                <div style="margin-left: 30px;">
                    <div style="margin-top: 25px; color: #FFE0E6;">
                        <h3>Eventos creados</h3>
                        <ul style="margin-top: 30px; color: white;">
                            <li>Evento 1</li>
                            <li>Evento 2</li>
                            <li>Evento 3</li>
                            <li>Evento 4</li>
                        </ul>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>



<form asp-action="DetalleEvento" asp-controller="Evento" method="post">
    <div class="mb-3">
        <label asp-for="GuidDeEvento" class="form-label">Ingresa el codigo del evento</label>
        <input type="text" class="form-control" asp-for="GuidDeEvento">
    </div>

    <button type="submit" class="btn btn-primary">Ir al evento</button>
</form>

<h1>Crear un evento</h1>

<a class="btn btn-primary" asp-controller="Evento" asp-action="CrearNuevoEvento">Crear un evento</a>

<h1>Editar perfil</h1>

<a class="btn btn-primary" asp-controller="Usuario" asp-action="Editar" asp-route-usuarioEmail="gustavo.mph@gmail.com" >Editar perfil</a>
