@model EventosTestMVC.Models.ViewModel.DetalleEventoViewModel
@{
}

<h1>Detalle del evento</h1>


<div class="container">

<div class="container">
    <div class="col-md-12">
        <div class="row" style="  margin-block-start: 55px;">
            <div class="col-sm-6">

                <div class="card" id="horayagenda" style="margin-bottom: 30px;">
                    <div class="card-body text-center">
                        <img src="~/img/reloj.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top">
                        <h5 class="card-title" style="margin: 5px; font-weight: bold; font-size: 25px;">12 dias 7 horas 4 minutos</h5>
                    </div>
                </div>
                <div class="card" id="horayagenda">
                    <div class="card-body text-center ">

                        <div>

                            <input type="checkbox" id="asistenciaCheckbox" style="margin-bottom: 50px;">
                            <label for="asistenciaCheckbox" id="asistenciaLabel"></label>
                            <p id="resultado" style="font-weight: bold; font-size: 30px; ">Asistencia</p>
                        </div>

                        <script>
                            const checkbox = document.getElementById("asistenciaCheckbox");
                            const resultado = document.getElementById("resultado");

                            checkbox.addEventListener("change", function () {
                                if (checkbox.checked) {
                                    resultado.style.color = "green"; // Cambiar el color del texto a verde
                                    resultado.textContent = "Asistire";
                                } else {
                                    resultado.style.color = "red"; // Cambiar el color del texto a rojo
                                    resultado.textContent = "No asistire";
                                }
                            });
                        </script>

                    </div>
                </div>

            </div>



            <!--info del evento-->
            <div class="col-md-6">
                </br>

                <p class="text-muted text-end">Creador del Evento: @Model.CreadorDelEvento.Nombre @Model.CreadorDelEvento.Apellido</p>
                <div style="margin-left: 30px;">

                    <div>
                        <img src="~/img/candado.png" alt="Logo" width="25" height="25" class="d-inline-block align-text-top">
                        <small class="text-muted">Clave de ingreso: @Model.Evento.Id</small>
                    </div>

                    <h1 class="display-4" style="color: #4911F7; font-weight: bold; margin-top: 10px; ">@Model.Evento.Titulo</h1>
                    <h4 style="font-size: 22px; color: grey;"><em>@Model.Evento.TipoEvento.Nombre</em></h4>

                    <div class="text-center" style="margin-top: 40px; ">
                        <div>
                            <img src="~/img/calendario.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top">
                            <h3 style="font-weight: bold; color: #FF77A5; margin-top: 5px; margin-bottom: 10px;">@Model.Evento.FechaDeEvento.Date</h3>
                        </div>

                        <div>
                            <img src="~/img/reloj.png" alt="Logo" width="40" height="40" class="d-inline-block align-text-top">
                            <h3 style="font-weight: bold; color: #FF77A5; margin-top: 5px;">@Model.Evento.FechaDeEvento.TimeOfDay</h3>
                        </div>
                        <h4>Lugar del Evento</h4>
                    </div>


                    <div style="margin-top: 40px;">
                        <h5>Codigo de Vestimenta: @Model.Evento.CodigoVestimenta.Nombre</h5>
                        <h5>Lista de cosas a llevar: </h5>
                        <ul>
                            <li>Cosa 1</li>
                            <li>Cosa 2</li>
                            <li>Cosa 3</li>
                            <li>Cosa 4</li>
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>



<section style="background-color: #eee;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                                 height="60" />
                            <div>
                                <h6 class="fw-bold text-primary mb-1">Lily Coleman</h6>
                                <p class="text-muted small mb-0">
                                    Shared publicly - Jan 2020
                                </p>
                            </div>
                        </div>

                        <p class="mt-3 mb-4 pb-2">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                            quis nostrud exercitation ullamco laboris nisi ut aliquip consequat.
                        </p>

                        <div class="small d-flex justify-content-start">
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="far fa-thumbs-up me-2"></i>
                                <p class="mb-0">Like</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="far fa-comment-dots me-2"></i>
                                <p class="mb-0">Comment</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3">
                                <i class="fas fa-share me-2"></i>
                                <p class="mb-0">Share</p>
                            </a>
                        </div>
                    </div>
                    @foreach(var comentario in Model.Comentarios){
                        <div class="card-body">
                            <div class="d-flex flex-start align-items-center">
                                <img class="rounded-circle shadow-1-strong me-3"
                                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                                     height="60" />
                                <div>
                                    <h6 class="fw-bold text-primary mb-1">@comentario.Usuario.Nombre</h6>
                                    <p class="text-muted small mb-0">
                                        @comentario.PublishDate.ToString();
                                    </p>
                                </div>
                            </div>

                            <p class="mt-3 mb-4 pb-2">
                                @comentario.TextComment
                            </p>

                            <div class="small d-flex justify-content-start">
                                <a href="#!" class="d-flex align-items-center me-3">
                                    <i class="far fa-thumbs-up me-2"></i>
                                    <p class="mb-0">Like</p>
                                </a>
                                <a href="#!" class="d-flex align-items-center me-3">
                                    <i class="far fa-comment-dots me-2"></i>
                                    <p class="mb-0">Comment</p>
                                </a>
                                <a href="#!" class="d-flex align-items-center me-3">
                                    <i class="fas fa-share me-2"></i>
                                    <p class="mb-0">Share</p>
                                </a>
                            </div>
                        </div>
                    }

                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                        <div class="d-flex flex-start w-100">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                                 height="40" />
                            <form asp-action="InsertarComentario" asp-controller="Evento" method="post">
                                <input asp-for="@Model.Evento.Id" hidden/>
                                <div class="form-outline w-100">
                                    <textarea asp-for="@Model.Comentario.TextComment" class="form-control" id="textAreaExample" rows="4"
                                              style="background: #fff;"></textarea>
                                    <label class="form-label" for="textAreaExample">Message</label>
                                </div>
                                <div class="float-end mt-2 pt-1">
                                    <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
