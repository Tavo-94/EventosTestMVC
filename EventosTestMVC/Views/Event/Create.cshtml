@using Microsoft.AspNetCore.Mvc.Rendering
@model EventosTestMVC.Models.Event
@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" type="text/css" href="~/css/site.css">
<body>


    <div class="position-absolute top-0 start-0" style="margin-top: 40px; margin: 25px;;">

        <a asp-area="" asp-controller="Home" asp-action="Index">
            <img style="width: 30px; height: 30px;position: absolute;  flex-direction: column; justify-content: center; align-items: center; display: inline-flex;" style="width:fit-content;" src="~/img/atras.png" class="text-center " />
            <img style="width: 55px; height: 55px;position: absolute; margin-left: 40px; flex-direction: column; justify-content: center; align-items: center; display: inline-flex;" style="width:fit-content;" src="~/img/logo.png" class="text-center " />
        </a>

    </div>


    <!--código de vestimenta, horario, lugar, fecha, itinerario)
    publicar lista de cosas a llevar
    publicar ideas de regalos (de ser necesario)
    -->

    <section asp-action="Create" asp-controller="Event" method="post" class="section-create" style="margin-top: 140px;">
        <div class="row">
            <div class="col-md-5 col-md-6 text-center">
                <div class="abj">
                    <!--IZQUIERDA-->
                    <div class="container ">

                        <div class="col-md-12 ">

                            <h2 class="text-white">Datos del evento</h2> <hr />     </br>
                            <div class="text-center">

                                <!--fecha y hora-->
                                <div class="input-group mb-4">

                                    <div class="row">
                                        <div class="col">
                                            <div class="form-floating">
                                                <label for="floatingInputGrid">Fecha</label>
                                                <input asp-for="EventDate" type="date" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-floating">
                                                <label for="floatingInputGrid">Hora</label>
                                                <input asp-for="Hora" type="time" class="form-control" id="floatingInputGrid">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--lugar-->
                                <div class="input-group mb-3">
                                    <input asp-for="Lugar" type="text" class="form-control" placeholder="Lugar del evento" aria-label="clave" aria-describedby="basic-addon1">
                                </div>

                                <!--codigo de vestimenta-->
                                <div class="input-group mb-6">
                                    <div class="mb-3">
                                        <label asp-for="Vestimenta" class="control-label">Vestimenta</label>
                                        <select asp-for="Vestimenta" asp-items="@ViewBag.VestimentaList" class="form-select"></select>
                                    </div>
                                </div>

                                
                                <!--lista de cosas a llevar-->
                                <div class="form-floating">
                                    <textarea asp-for="Lugar" class="form-control" placeholder="hola" style="height: 100px"></textarea>
                                    <label for="floatingTextarea2">Lista de cosas a llevar</label>
                                </div>




                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-4 offset-md-1 col-md-5 offset-md-0">
                <div class="container-fluid">
                    <h4 class="alto text-center"></h4>
                    <div class="tit mb-3">
                        <div class="mb-3">
                            <label asp-for="Tags" class="form-label">Tipo de evento</label>
                            <select asp-for="Tags" asp-items="@ViewBag.TagsList" class="form-select" aria-label="Tipo de evento"></select>
                        </div>

                        <div class="input-group mb-3">
                            <input asp-for="Id" type="text" class="form-control" placeholder="Crear clave de ingreso" aria-label="clave" aria-describedby="basic-addon1">
                        </div>

                        <div class="input-group mb-3 input-group-lg">
                            <input asp-for="Titulo" type="text" class="form-control" placeholder="Nombre del evento" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                        </div>

                        @* <div class="input-group mb-3 input-group-lg">
                            <!--label for="exampleColorInput" class="form-label">Color picker</label-->
                            <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c" title="Choose your color">
                        </div> *@

                        </br>
                            <div class="d-grid gap-2">
                                <button asp-area="" asp-controller="Event" asp-action="Evento" class="btn " type="button" id="boton">CREAR EVENTO</button>
                            </div>
                    </div>

                </div>

            </div>

        </div>
    </section>

</body>