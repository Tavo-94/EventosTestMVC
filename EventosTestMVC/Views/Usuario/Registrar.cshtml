@model EventosTestMVC.Models.ViewModel.RegistroViewModel
@{
}



<style>
    header {
        background-color: #4911F7;
        height: 250px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    #btnlog {
        background-color: #4911F7;
        color: white;
        font-weight: 700;
        border: none;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);
        border-radius: 100px;
        margin-top: 20px;
        margin-bottom: 50px;
    }
</style>

<header class="d-flex flex-row justify-content-center align-items-center">
    <h1 style="font-size: 70px; font-weight: 550; margin-top: 70px; color: white;">REGISTRO</h1>
</header>


<div class="container " style="margin-top: 80px;">
    <div class="row align-items-center justify-content-center h-100">
        <div class="col-md-6">
            <form asp-action="Registrar" asp-controller="Usuario" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Usuario.Nombre" class="form-label">Nombre</label>
                    <input class="form-control" asp-for="@Model.Usuario.Nombre">
                    <span asp-validation-for="@Model.Usuario.Nombre" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Usuario.Apellido" class="form-label">Apellido</label>
                    <input class="form-control" asp-for="@Model.Usuario.Apellido">
                    <span asp-validation-for="@Model.Usuario.Apellido" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Usuario.Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="@Model.Usuario.Email">
                    <span asp-validation-for="@Model.Usuario.Email" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Usuario.Password" class="form-label">Contraseña</label>
                    <input class="form-control" asp-for="@Model.Usuario.Password">
                    <span asp-validation-for="@Model.Usuario.Password" class="text-danger"></span>
                </div>
                @*                 <div class="mb-3">
                <label asp-for="@Model.Usuario.Password" class="form-label">Confirmar Contraseña</label>
                <input class="form-control" asp-for="@Model.Usuario.Password">
                <span asp-validation-for="@Model.Usuario.Password" class="text-danger"></span>
                </div> *@
                <select id="mySelectbox" asp-for="@Model.Usuario.AvatarUserId" asp-items="@Model.Avatares" class="form-select">
                    <option selected disabled>--- Seleccionar ---</option>

                </select>

                <div class="d-grid gap-2 ">
                    <button type="submit" class="btn btn-lg rounded-pill px-5 align-self-center" id="btnlog">ACEPTAR</button>
                </div>
            </form>

        </div>
        <div class="col-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        Avatar
                    </h5>
                </div>
                <div class="card-img">
                    <img id="avatar-img" class="card-img-bottom rounded-circle" src="~/img/Default01.jpg" />
                </div>
            </div>
        </div>
    </div>



</div>


@section Scripts
    {
    <script>
        $(document).ready(function () {

            $("#mySelectbox").on("change", function () {

                var value = $(this).val();

                switch (value) {
                    case "1":
                        // code block
                        $("#avatar-img").attr("src", "/img/Default01.jpg");

                        break;
                    case "2":
                        // code block
                        $("#avatar-img").attr("src", "/img/Mujer01.jpg");

                        break;
                    case "3":
                        // code block
                        $("#avatar-img").attr("src", "/img/Hombre01.jpg");

                        break;
                    case "4":
                        // code block
                        $("#avatar-img").attr("src", "/img/Mujer02.jpg");

                        break;
                    default:
                    // code block
                        $("#avatar-img").attr("src", "/img/Default01.jpg");

                }


            });

        });

    </script>
}
