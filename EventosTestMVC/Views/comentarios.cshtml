@model EventosTestMVC.Models.ViewModel.DetalleEventoViewModel
@{
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet" type="text/css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Comments</title>
    <link rel="shortcut icon" href="img/logo.png" type="image/png">

</head>

<body>

<!--nav invitado-->
  <nav class="navbar navbar-light bg-light"style="padding:20px;">
    <div class="container-fluid justify-content-md-end ">
      <button id="logout" >LOG OUT</button>
    </div>
  </nav>
 <!--nav-->

<h3 style="margin-top: 45px; margin-left: 10px; margin-right: 10px; " class="display-6 text-center">Puedes dejar tu comentario sobre el evento o mensaje para el anfitrion aqui</h3>

<style>
    .title{
        color: #FD4685;
    }

    .link{
        color: #4911F7;
        text-decoration: none;
    }

    .btn_enviar{
border-radius: 35rem;
margin-left:20px;
border-color: #FD4685;
background-color: white;
padding: 10px;

}
</style>



<section style="background-color: #FFE0E6;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60" height="60" />
                            <div>
                                <h6 class="fw-bold mb-1 title">Lily Coleman</h6>
                                <p class="text-muted small mb-0">
                                    18 Jan 2020
                                </p>
                            </div>
                        </div>

                        <p class="mt-3 mb-4 pb-2">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
                            quis nostrud exercitation ullamco laboris nisi ut aliquip consequat.
                        </p>

                        <div class="small d-flex justify-content-start ">
                            <a href="#!" class="d-flex align-items-center me-3 link">
                                <i class="far fa-thumbs-up me-2"></i>
                                <img src="img/like.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                <p class="mb-0 ">Like</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3 link">
                                <i class="far fa-comment-dots me-2"></i>
                                <img src="img/coment.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                <p class="mb-0 ">Comment</p>
                            </a>
                            <a href="#!" class="d-flex align-items-center me-3 link">
                                <i class="fas fa-share me-2"></i>
                                <img src="img/share.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                <p class="mb-0 ">Share</p>
                            </a>
                        </div>
                    </div>
                    @foreach(var comentario in Model.Comentarios){
                        <div class="card-body">
                            <div class="d-flex flex-start align-items-center">
                                <img class="rounded-circle shadow-1-strong me-3"
                                     src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                                     height="60" />
                                <div>
                                    <h6 class="fw-bold  mb-1  title">@comentario.Usuario.Nombre</h6>
                                    <p class="text-muted small mb-0">
                                        @comentario.PublishDate.ToString();
                                    </p>
                                </div>
                            </div>

                            <p class="mt-3 mb-4 pb-2">
                               @comentario.TextComment
                            </p>

                            <div class="small d-flex justify-content-start">
                                <a href="#!" class="d-flex align-items-center me-3 link">
                                    <i class="far fa-thumbs-up me-2"></i>
                                    <img src="img/like.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                    <p class="mb-0">Like</p>
                                </a>
                                <a href="#!" class="d-flex align-items-center me-3 link">
                                    <i class="far fa-comment-dots me-2"></i>
                                    <img src="img/coment.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                    <p class="mb-0">Comment</p>
                                </a>
                                <a href="#!" class="d-flex align-items-center me-3 link">
                                    <i class="fas fa-share me-2"></i>
                                    <img src="img/share.png" alt="avatar" width="15" height="15" style="margin-right: 5px;" />
                                    <p class="mb-0">Share</p>
                                </a>
                            </div>
                        </div>
                    }

                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                        <div class="d-flex flex-start w-100">
                            <img class="rounded-circle shadow-1-strong me-3"
                                 src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                                 height="40" />
                            <form asp-action="InsertarComentario" asp-controller="Evento" method="post" >
                                <input asp-for="@Model.Evento.Id" hidden/>
                                <div class="form-outline w-100"  width="40" >
                                    <textarea asp-for="@Model.Comentario.TextComment" class="form-control" id="textAreaExample" rows="2"
                                              style="background: #fff;" placeholder="Deja tu comentario..."></textarea>
                                 <div class="float-end mt-2 pt-1">
                                    <button type="submit" class="btn-sm btn_enviar" style="font-weight: bold; color: #FD4685; ">  ENVIAR<img src="img/enviar.png" height="20px" width="20px" style= "margin-left: 10px;"   > </button>
                                </div>    
                                </div>
                               
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



</body>
</html>